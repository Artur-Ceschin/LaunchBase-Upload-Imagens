{% extends "layout.njk" %}

{% block content %}

    <form method="POST" action="/chef">
        <div class="info">
            <h2>Criando Chef</h2>

            <button type="submit">
                Salvar Chef
            </button>
        </div>
        <h3>Nome</h3>
        <div>
            <input type="text" name="name" placeholder="https://" value="{{chef.name}}"/>
        </div>

        <h3>Seu Avatar</h3>
        <div>
            <input type="url" name="avatar_url" value="{{chef.avatar_url}}" placeholder="https://"/>
        </div>

    </form>

    <script src="/js/addInput.js"></script>
{% endblock content %}