{% extends "layout.njk" %}

{% block content %}
    <div class="info">
        <h2>Receita:
            {{ recipies.title}}</h2>

        <button>
            <a href="/admin/recipe/{{ recipies.id}}/edit">Ediar receita</a>
        </button>
    </div>

    <div class="content">
        <div class="gallery">
            <div class="highlight">
                {% if not files[0] %}
                    <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO" alt="">
                {% else %}
                    <img src="{{files[0].src}}" alt="{{files[0].name}}">
                {% endif %}
            </div>
            <div class="gallery-preview">
                {% for image in files %}
                    <img src="{{image.src}}" alt="{{image.name}}" {% if loop.index0 == 0 %} class="active" {% endif %} onclick="ImageGallery.setImage(event)">
                {% endfor %}
            </div>
        </div>

        <div class="content-header">
            <h1>{{ recipies.title }}</h1>
            <p>por
                {{ recipies.chef_name }}</p>
        </div>

        <div class="content-recipies">
            <h2>Ingredientes</h2>
            <ul>
                {% for recipie in recipies.ingredients %}
                    <li>
                        {{recipie}}</li>
                {% endfor %}
            </ul>
            <h2>Modo de preparo</h2>
            <ul>
                {% for recipie in recipies.preparation %}
                    <li>
                        {{recipie}}</li>
                {% endfor %}
            </ul>
            <h2>informacoes adicionais</h2>
            <div class="last-item">
                <span>{{ recipies.information}}</span>
            </div>
        </div>
    </div>
{% endblock content %}